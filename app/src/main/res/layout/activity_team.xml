<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_team"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mysterious.filecrypt.Activities.TeamActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teamToolbar"
        android:background="@color/colorPrimary"
       >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Team"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"/>

    </android.support.v7.widget.Toolbar>

<LinearLayout
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/teamToolbar">

    <TextView
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app is developed by the collabrative efforts of : \n\n\nAtul Agarwal (https://github.com/mysterious-29)\n\nJalaz Kumar (https://github.com/jaykay12)\n\nAditya Arora (https://githhub.com/adi23arora)\n\nRakesh Kumar (https://github.com/spider34)"/>


</LinearLayout>


</RelativeLayout>
